#!/bin/bash

PROGNAME=`basename $0`
PROGPATH=`echo $0 | sed -e 's,[\\/][^\\/][^\\/]*$,,'`
REVISION="1.0"

TESTFILE="check_mount_rw-testfile"
RAND=$RANDOM

print_usage() {
	echo "Usage: $PROGNAME"
}

print_help() {
	print_revision $PROGNAME $REVISION
	echo ""
	print_usage
	echo ""
	echo "This plugin will write temporary file to all detected nfs and glusterfs directories and read them to verify the network mount points are working without fail"
	echo ""
	exit 0
}

check_mount_rw() {
	DIRECTORIES=(`grep -E 'glusterfs|nfs' /proc/mounts | awk '{print $2}'`)

	for i in "${DIRECTORIES[@]}"
	do
		if [[ -e $i/$TESTFILE ]]; then
			echo "2 Mount_RW:$i - Testfile $TESTFILE under $i already exist"
			rm -f $i/$TESTFILE
			continue
		fi

		timeout 1s echo $RAND > $i/$TESTFILE
		RET_W=$?
		if [[ $RET_W -eq 124 ]]; then
			echo "2 Mount_RW:$i - Writing test file to $i timed out"
			continue
		elif [[ $RET_W -ne 0 ]]; then
			echo "3 Mount_RW:$i - Unknown write error $RET has occured while writing test file to $i"
			continue
		fi

		TESTREAD=`timeout 1s cat $i/$TESTFILE`
		RET_R=$?
		if [[ $RET_R -eq 124 ]]; then
			echo "2 Mount_RW:$i - Reading test from $i/$TESTFILE timed out"
			continue
		elif [[ $RET_R -ne 0 ]]; then
			echo "3 Mount_RW:$i - Unknown read error $RET has occured while reading test file from $i"
			continue
		fi

		if [[ $TESTREAD -eq $RAND ]]; then
			timeout 1s rm -f $i/$TESTFILE
			RET_RM=$?
			if [[ $RET_RM -ne 0 ]]; then
				echo "2 Mount_RW:$i - Failed to remove the test file after creating it under $i"
				continue
			else
				echo "0 Mount_RW:$i - Write and read test to the $i mount point was successful"
				continue
			fi
		else
			echo "2 Mount_RW:$i - Content in the test file from $i/$TESTFILE does not match the source input"
			continue
		fi
	done
}

case "$1" in
	-h)
		print_help
		exit 0
		;;
	-V)
		echo "$PROGNAME version: $REVISION"
		exit 0
		;;
	*)
		check_mount_rw
		exit 0
		;;
esac
